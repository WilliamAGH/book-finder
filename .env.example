# Server configuration
SERVER_PORT=8081
SERVER_SSL_ENABLED=true

# Google Books API configuration
GOOGLE_BOOKS_API_BASE_URL=https://www.googleapis.com/books/v1
GOOGLE_BOOKS_API_MAX_RESULTS=40
GOOGLE_BOOKS_API_CONNECT_TIMEOUT=5000
GOOGLE_BOOKS_API_READ_TIMEOUT=5000

# S3 Compatible Storage (e.g., DigitalOcean Spaces)
# Note: these env variable names are seemingly hard coded in the bun S3 SDK
S3_BUCKET="book-finder"
S3_CDN_URL=https://book-finder.sfo3.digitaloceanspaces.com
S3_SERVER_URL=https://sfo3.digitaloceanspaces.com
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_REGION=sfo3

# For future use
SERVER_SSL_KEY_STORE=classpath:keystore/bookrecommendation.p12
SERVER_SSL_KEY_STORE_PASSWORD=password
SERVER_SSL_KEY_STORE_TYPE=PKCS12
SERVER_SSL_KEY_ALIAS=bookrecommendation

# Database configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/book_recommendation
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# OpenAI configuration
SPRING_AI_OPENAI_API_KEY=your-openai-api-key
SPRING_AI_OPENAI_MODEL=gpt-4

# Application Security Credentials
APP_ADMIN_PASSWORD=your_admin_password_here
APP_USER_PASSWORD=your_user_password_here
