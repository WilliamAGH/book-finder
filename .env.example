# Server configuration
SERVER_PORT=8081
# SSL is handled at proxy level in production
# SERVER_SSL_ENABLED=false

# Supabase Postgres configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://aws-1-us-west-1.pooler.supabase.com:5432/postgres?user=postgres.something&password=[YOUR-PASSWORD]
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=[YOUR-PASSWORD]

# OpenAI configuration
# SPRING_AI_OPENAI_API_KEY=sk-proj-your-openai-api-key-here
SPRING_AI_OPENAI_MODEL=gpt-4

# Google Books API configuration
GOOGLE_BOOKS_API_BASE_URL=https://www.googleapis.com/books/v1
GOOGLE_BOOKS_API_KEY=your-google-books-api-key-here
GOOGLE_BOOKS_API_MAX_RESULTS=40
GOOGLE_BOOKS_API_CONNECT_TIMEOUT=5000
GOOGLE_BOOKS_API_READ_TIMEOUT=5000

# S3 Compatible Storage (e.g., DigitalOcean Spaces)
# Note: these env variable names are seemingly hard coded in the bun S3 SDK
S3_BUCKET=book-finder
S3_CDN_URL=https://book-finder.sfo3.digitaloceanspaces.com
S3_SERVER_URL=https://sfo3.digitaloceanspaces.com
S3_ACCESS_KEY_ID=your-s3-access-key-id
S3_SECRET_ACCESS_KEY=your-s3-secret-access-key
AWS_REGION=sfo3

# Maven configuration
MAVEN_OPTS="-XX:+EnableDynamicAgentLoading -Xshare:off"

# Authentication for S3 cleanup utilities
APP_ADMIN_PASSWORD=your-admin-password-here
APP_USER_PASSWORD=your-user-password-here

# Anthropic API (if used)
# ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here

# New York Times for best sellers
NYT_API_KEY=your-nyt-api-key-here
NYT_API_SECRET=your-nyt-api-secret-here

# Optional: Cache configuration
# SPRING_CACHE_TYPE=caffeine

# Optional: Embedding service
# EMBEDDING_SERVICE_URL=

# Optional: S3 settings
# S3_ENABLED=true

# Optional: Sitemap configuration
# SITEMAP_S3_ACCUMULATED_IDS_KEY=sitemap/accumulated-book-ids.json
